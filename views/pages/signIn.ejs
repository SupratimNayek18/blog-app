<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head.ejs',{title:'Sign In'}) %>
  </head>
  <body>
    <%- include('../partials/nav.ejs',{path:'/signin'}) %>
    <%-include('../partials/section.ejs',{title:'Sign In'}) %>
    <div class="container">
      <div class="row" style="width: 15%; margin: 0 auto">
        <form action="/signin" class="form" method="post">
          <div class="form-group">
            <label for="username">Username</label>
            <input
              class="form-control"
              type="text"
              name="username"
              id="username"
            />
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input
              class="form-control"
              type="password"
              name="password"
              id="password"
            />
          </div>
          <div class="form-group" style="text-align: center">
            <button type="submit" class="btn btn-primary">Sign In</button>
          </div>
        </form>
      </div>
    </div>
  </body>
</html>
